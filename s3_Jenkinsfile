pipeline {
    agent any

    parameters {
        string(name: 'STACK_NAME', defaultValue: 's3-demo-stack', description: 'CloudFormation Stack Name')
        string(name: 'TEMPLATE_NAME', defaultValue: '01_s3cft.yml', description: 'CloudFormation Template File Name')
        choice(
            name: 'REGION',
            choices: ['us-east-1', 'us-east-2', 'us-west-2'],
            description: 'AWS Region'
        )
    }

    stages {
        stage('Checkout Repository') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/riteshbehal/devopscourse.git']]])
            }
        }

        stage('Deploy CloudFormation Stack') {
            steps {
                script {
                    sh """
                        aws cloudformation deploy \
                        --stack-name ${params.STACK_NAME} \
                        --template-file ${params.TEMPLATE_NAME} \
                        --region ${params.REGION}
                    """
                }
            }
        }
    }
}
