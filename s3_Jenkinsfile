pipeline {
    agent any

    parameters {
        string(name: 'STACK_NAME', defaultValue: 'example-s3-stack', description: 'CloudFormation Stack Name')
        string(name: 'TEMPLATE_NAME', defaultValue: '01_s3cft.yml', description: 'CloudFormation Template File Name')
        string(name: 'BUCKET_NAME', defaultValue: 'my-unique-s3-bucket-name', description: 'S3 Bucket Name (must be globally unique)')
        choice(
            name: 'REGION',
            choices: ['us-east-1', 'us-east-2', 'us-west-2'],
            description: 'AWS Region for deployment'
        )
    }

    stages {
        stage('Checkout Repository') {
            steps {
                checkout scm
            }
        }

        stage('Deploy CloudFormation Stack') {
            steps {
                script {
                    sh """
                        aws cloudformation deploy \
                        --stack-name ${STACK_NAME} \
                        --template-file ${TEMPLATE_NAME} \
                        --region ${REGION} \
                        --capabilities CAPABILITY_NAMED_IAM \
                        --parameter-overrides BucketName=${BUCKET_NAME}
                    """
                }
            }
        }
    }
}
