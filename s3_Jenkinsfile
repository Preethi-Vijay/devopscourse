pipeline {
    agent any

    parameters {
        string(name: 'STACK_NAME', defaultValue: 'example-s3-stack', description: 'CloudFormation Stack Name')
        string(name: 'TEMPLATE_FILE', defaultValue: '01_s3cft.yml', description: 'Path to CloudFormation Template File')
        string(name: 'BUCKET_NAME', defaultValue: 'aman-s3-bucket-0718', description: 'Name of the S3 bucket')
        string(name: 'AWS_DEFAULT_REGION', defaultValue: 'us-east-1', description: 'AWS Region')
    }

    environment {
        AWS_DEFAULT_REGION = "${params.AWS_DEFAULT_REGION}"
        STACK_NAME = "${params.STACK_NAME}"
        TEMPLATE_FILE = "${params.TEMPLATE_FILE}"
        BUCKET_NAME = "${params.BUCKET_NAME}"
    }

    stages {
        stage('Checkout Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/riteshbehal/devopscourse.git'
            }
        }

        stage('Deploy CloudFormation Stack') {
            steps {
                script {
                    sh """
                        aws cloudformation deploy \
                          --stack-name ${STACK_NAME} \
                          --template-file ${TEMPLATE_FILE} \
                          --region ${AWS_DEFAULT_REGION} \
                          --parameter-overrides BucketName=${BUCKET_NAME}
                    """
                }
            }
        }
    }
}
