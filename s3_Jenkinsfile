pipeline {
    agent any
    parameters {
        string(name: 'STACK_NAME', defaultValue: 'example-s3-stack', description: 'CloudFormation Stack Name')
        string(name: 'TEMPLATE_NAME', defaultValue: '01_s3cft.yml', description: 'CloudFormation Template File')
        choice(
            name: 'REGION',
            choices: ['us-east-1', 'us-east-2', 'us-west-2'],
            description: 'AWS Region to deploy the stack'
        )
    }

    environment {
        AWS_DEFAULT_REGION = "${params.REGION}"
    }

    stages {
        stage('Checkout Repository') {
            steps {
                git url: 'https://github.com/riteshbehal/devopscourse.git'
            }
        }

        stage('Deploy CloudFormation Stack') {
            steps {
                script {
                    sh """
                        aws cloudformation deploy \
                          --stack-name ${params.STACK_NAME} \
                          --template-file ${params.TEMPLATE_NAME} \
                          --region ${params.REGION} \
                          --capabilities CAPABILITY_NAMED_IAM
                    """
                }
            }
        }
    }
}
